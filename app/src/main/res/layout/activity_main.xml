<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#880000FF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.xinlan.circleviewdemo.DiscView
        android:id="@+id/disc_view"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        app:dvInnerCirclePad="10dp"
        app:dvInnerCircleShow="false"
        app:dvOuterCirclePad="8dp"
        app:dvOuterCircleShow="false"
        app:dvStrokenWidth="15dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/disc_view"
        android:layout_marginTop="20dp"
        android:text="test" />

</RelativeLayout>
